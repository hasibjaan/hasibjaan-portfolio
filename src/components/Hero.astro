---
const headline = "Ignite Digital Visions";
const subheadline = "Crafting immersive worlds where code meets artistry.";
const cta = "Explore My Work";
const tagline = "Futuristic fusion of tech and creativity.";
---

<section id="hero" class="hero-section" aria-labelledby="hero-headline">
  <img src="/assets/profile.jpg" alt="Hasib Jaan, Web Developer and Designer based in UAE" class="profile-photo" />
  <h1 id="hero-headline">{headline}</h1>
  <p>{subheadline}</p>
  <button aria-label="Explore portfolio work">{cta}</button>
  <p class="tagline">{tagline}</p>
</section>